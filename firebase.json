{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "rewrites": [
      {
        "source": "/api/createDeluxePayment",
        "function": { "functionId": "createDeluxePayment", "region": "us-central1", "codebase": "default" }
      },
      {
        "source": "/api/deluxeWebhook",
        "function": { "functionId": "deluxeWebhook", "region": "us-central1", "codebase": "default" }
      },
      {
        "source": "/api/getDeluxePaymentStatus",
        "function": { "functionId": "getDeluxePaymentStatus", "region": "us-central1", "codebase": "default" }
      },
      {
        "source": "/api/cancelDeluxePayment",
        "function": { "functionId": "cancelDeluxePayment", "region": "us-central1", "codebase": "default" }
      },
      {
        "source": "/api/health",
        "function": { "functionId": "apiHealth", "region": "us-central1", "codebase": "default" }
      },
      { "source": "**", "destination": "/index.html" }
    ]
  },
  "emulators": {
    "functions": { "port": 5001 },
    "hosting": { "port": 5000 },
    "ui": { "enabled": true }
  }
}
